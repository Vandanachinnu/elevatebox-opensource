def print_triangle(N):
  for i in range(1, N + 1):
    
    left_part = ''.join(str(x) for x in range(1, i + 1))
    
    right_part = ''.join(str(x) for x in range(i, 0,  -1))
    
    spaces = ' ' * (2 * (N - i))
    
    print(left_part + spaces + right_part)
    
N = int(input())    

print_triangle(N)
